            background-color: white;
            border: 10px solid #e3a087;
            padding: 25px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-top: 50px;
        }

        .contact-section .contact-info-inner .single-box {
            margin-bottom: 0;
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            color: black;
        }

        .contact-section .contact-info-inner h3 {
            font-size: 22px;
            color: #e3a087;
            margin-bottom: 15px;
            border-bottom: 2px solid #e3a087;
            display: inline-block;
            padding-bottom: 5px;
        }

        .contact-section .contact-info-inner .list {
            list-style: none;
            padding-left: 0;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            color: black;
        }

        .contact-section .contact-info-inner .list li {
            font-size: 16px;
            color: black;
            margin-bottom: 8px;
            padding-left: 0;
            position: relative;
            text-align: center;
        }

        .contact-section .contact-info-inner .list li a {
