<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
    />

    <title>Senescence Bakery</title>

    <%- include("partials/links.ejs")%>
    <link rel="stylesheet" href="/css/custom.css">
    <link rel="stylesheet" href="/css/notifications.css">
  </head>

  <body>
    <%- include("partials/navbar.ejs")%>
    <main>
        <!-- custom-order-section -->
        <section class="contact-section sec-pad">
            <div class="auto-container">
                <div class="sec-title centred">
                    <p>Custom Order</p>
                    <h2>Place Your Custom Order</h2>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12 col-sm-12 form-column">
                        <div class="form-inner">
                            <h3>Tell us about your custom order</h3>
                            <form method="post" action="/api/v1/custom-orders" id="custom-order-form" class="default-form" enctype="multipart/form-data"> 
                                <div class="row clearfix">
                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <input type="text" name="firstName" placeholder="First Name *" required>
                                        <span class="error-message"></span>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <input type="text" name="lastName" placeholder="Last Name *" required>
                                        <span class="error-message"></span>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <input type="email" name="email" placeholder="Your Email *" required>
                                        <span class="error-message"></span>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <input type="text" name="phone" placeholder="Your Phone *" required>
                                        <span class="error-message"></span>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                        <input type="text" name="address" placeholder="Delivery Address *" required>
                                        <span class="error-message"></span>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                        <textarea name="description" placeholder="Describe your custom order in detail *" required></textarea>
                                        <span class="error-message"></span>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <input type="file" name="imageUrl" accept="image/*">
                                        <small>Upload reference image (optional)</small>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <input type="date" name="preferredDate">
                                        <small>Preferred delivery date (optional)</small>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                        <textarea name="notes" placeholder="Additional notes (optional)"></textarea>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                                        <button class="theme-btn-one" type="submit" name="submit-form">Submit Order</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- custom-order-section end -->
    </main>
    <%- include("partials/footer")%> 
    <%- include("partials/scripts")%>
    <%- include('partials/chatbot') %>
    <script src="/js/notifications.js"></script>

    <!-- Custom Notification Styles -->
   

    <!-- Notification Container -->
    <div id="notification" class="custom-notification"></div>

  </body>
</html>