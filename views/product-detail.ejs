<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
    />

    <title><%= product.name %> - Senescence Bakery</title>

    <%- include("partials/links.ejs")%>
    <link rel="stylesheet" href="/css/custom.css">
    <style>
      .product-image img {
        max-width: 60%; /* Adjust as needed */
        height: auto;
        display: block;
        margin: 0 auto;
      }
      .price-buttons,
      .addto-cart-box ul {
        display: flex;
        justify-content: center;
        margin-top: 20px;
        flex-wrap: wrap;
      }
      .price-buttons .theme-btn-one {
        margin: 5px;
      }
      .addto-cart-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 10px;
      }
      .addto-cart-box .quantity-input {
        width: 60px;
        text-align: center;
        padding: 8px 5px;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-bottom: 10px;
      }
      .addto-cart-box label {
        margin-bottom: 5px;
      }
      .addto-cart-box ul {
        margin: 0;
        padding: 0;
        list-style: none;
        display: flex;
        gap: 10px;
        align-items: center;
      }
      .addto-cart-box ul li {
        margin: 0;
      }
      .product-discription {
        padding-top: 30px; 
      }
      .other-links {
        margin-top: 20px;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center; 
      }
      .other-links .list {
        margin-right: 20px;
        margin-bottom: 10px;
      }
      .other-links .list li {
        display: inline-block;
        margin-right: 5px;
      }
      .price-select.active {
        background-color: #ff6b6b;
        color: white;
      }
    </style>
  </head>

  <body>
    <%- include("partials/navbar.ejs")%>
    <main>
        <!-- single-product -->
        <section class="single-product">
            <div class="product-details-content" style="background-image: url(assets/images/background/single-shop-1.jpg);">
                <div class="auto-container">
                    <div class="row clearfix">
                        <div class="col-lg-6 col-md-12 col-sm-12 image-column">
                            <div class="product-image">
                                <figure class="image">
                                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                                </figure>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-12 content-column">
                            <div class="product-details">
                                <h2><%= product.name %></h2>
                                <div class="text">
                                    <p><%= product.description %></p>
                                </div>
                                <div class="other-links">
                                    <ul class="category list">
                                        <li>Category:</li>
                                        <li><a href="#"><%= product.category %></a></li>
                                    </ul>
                                    <% if (product.tags && product.tags.length > 0) { %>
                                    <ul class="tags list">
                                        <li>Tags:</li>
                                        <% product.tags.forEach((tag, index) => { %>
                                            <li><a href="#"><%= tag %></a><%= index < product.tags.length - 1 ? ',' : '' %></li>
                                        <% }); %>
                                    </ul>
                                    <% } %>
                                </div>
                                <div class="price-buttons">
                                    <button type="button" class="theme-btn-one price-select" data-price-type="whole" data-price="<%= product.pricePackWhole %>">Whole/Pack ($<%= product.pricePackWhole %>)</button>
                                    <% if (product.pricePiece) { %>
                                        <button type="button" class="theme-btn-one price-select" data-price-type="piece" data-price="<%= product.pricePiece %>">Single Piece ($<%= product.pricePiece %>)</button>
                                    <% } %>
                                </div>
                                <input type="hidden" id="selectedPrice" value="<%= product.pricePackWhole %>">
                                <input type="hidden" id="selectedPriceType" value="whole">
                                <div class="addto-cart-box">
                                    <label for="quantity">Quantity:</label>
                                    <input type="number" id="quantity" class="quantity-input" value="1" min="1">
                                    <ul class="clearfix">
                                        <li><button type="button" class="theme-btn-one" onclick="addToCart({
                                            id: '<%= product._id %>',
                                            name: '<%= product.name %>',
                                            price: parseFloat(document.getElementById('selectedPrice').value),
                                            image: '<%= product.imageUrl %>',
                                            quantity: parseInt(document.getElementById('quantity').value),
                                            priceType: document.getElementById('selectedPriceType').value
                                        })" <%= !product.inStock ? 'disabled' : '' %>><%= product.inStock ? 'Add To Cart' : 'Out of Stock' %></button></li>
                                        <li><button type="button" class="theme-btn-one" onclick="addToFavorites('<%= product._id %>')"><i class="fa fa-heart"></i> Add to Favorites</button></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="product-discription">
                <div class="auto-container">
                    <div class="tabs-box">
                        <div class="tab-btn-box">
                            <ul class="tab-btns tab-buttons clearfix">
                                <li class="tab-btn active-btn" data-tab="#tab-1">Description</li>
                                <li class="tab-btn" data-tab="#tab-2">Reviews</li>
                            </ul>
                        </div>
                        <div class="tabs-content">
                            <div class="tab active-tab" id="tab-1">
                                <div class="content-box">
                                    <h3>Product Description</h3>
                                    <p><%= product.description %></p>
                                    <% if (product.ingredients && product.ingredients.length > 0) { %>
                                        <h4>Ingredients:</h4>
                                        <ul>
                                            <% product.ingredients.forEach(ingredient => { %>
                                                <li><%= ingredient %></li>
                                            <% }); %>
                                        </ul>
                                    <% } %>
                                </div>
                            </div>
                            <div class="tab" id="tab-2">
                                <div class="row clearfix">
                                    <div class="col-lg-6 col-md-6 col-sm-12 review-block">
                                        <div class="customer-review">
                                            <h3>Reviews</h3>
                                            <% if (typeof feedbacks !== 'undefined' && feedbacks && feedbacks.length > 0) { %>
                                                <% feedbacks.forEach(feedback => { %>
                                                    <div class="single-review">
                                                        <div class="inner">
                                                            <h5><%= feedback.user %><span> - <%= new Date(feedback.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span></h5>
                                                            <p><%= feedback.message %></p>
                                                            <% if (feedback.response) { %>
                                                                <div class="admin-response">
                                                                    <h6>Admin Response:</h6>
                                                                    <p><%= feedback.response %></p>
                                                                    <small>Responded on: <%= new Date(feedback.respondedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></small>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                <% }); %>
                                            <% } else { %>
                                                <p>No reviews yet. Be the first to review this product!</p>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 comment-column">
                                        <div class="customer-comments">
                                            <h3>Be First To Rate It</h3>
                                            <div class="rating-box clearfix">
                                                <p>Your Rating</p>
                                            </div>
                                            <form id="reviewForm" class="comment-form">
                                                <div class="row clearfix">
                                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                                        <label>Your Review</label>
                                                        <textarea name="message" required></textarea>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                                        <label>Your Name</label>
                                                        <input type="text" name="user" required>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                                        <label>Your Email</label>
                                                        <input type="email" name="email" required>
                                                    </div>
                                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                                                        <button type="submit" class="theme-btn-one">Submit Review</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include("partials/footer")%>
    <%- include("partials/scripts")%>
    <%- include('partials/chatbot') %>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const priceButtons = document.querySelectorAll('.price-select');
            const selectedPriceInput = document.getElementById('selectedPrice');
            const selectedPriceTypeInput = document.getElementById('selectedPriceType');

            priceButtons.forEach(button => {
                button.addEventListener('click', function() {
                    priceButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    selectedPriceInput.value = this.dataset.price;
                    selectedPriceTypeInput.value = this.dataset.priceType;
                });
            });

           
            priceButtons[0].classList.add('active');
        });

        document.addEventListener('DOMContentLoaded', function() {
            const ratingStars = document.querySelectorAll('#rating-stars i');
            let selectedRating = 0;

            // Handle star rating clicks
            ratingStars.forEach(star => {
                star.addEventListener('click', function() {
                    const rating = this.getAttribute('data-rating');
                    selectedRating = rating;
                    
                    // Update star display
                    ratingStars.forEach(s => {
                        if (s.getAttribute('data-rating') <= rating) {
                            s.style.color = '#ffc107';
                        } else {
                            s.style.color = '#ccc';
                        }
                    });
                });
            });

            // Handle form submission
            const reviewForm = document.getElementById('reviewForm');
            reviewForm.addEventListener('submit', async function(e) {
                e.preventDefault();

                const formData = {
                    user: this.user.value,
                    email: this.email.value,
                    message: this.message.value
                };

                try {
                    console.log('Submitting form data:', formData);
                    const response = await fetch('/api/v1/feedback', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(formData)
                    });

                    console.log('Response status:', response.status);
                    const data = await response.json();
                    console.log('Response data:', data);

                    if (response.ok) {
                        alert('Review submitted successfully!');
                        reviewForm.reset();
                        // Refresh the page to show the new review
                        window.location.reload();
                    } else {
                        alert(data.error || 'Failed to submit review');
                    }
                } catch (error) {
                    console.error('Detailed error:', error);
                    alert('An error occurred. Please check the console for details.');
                }
            });
        });

        async function addToFavorites(productId) {
            try {
                const response = await fetch(`/api/v1/favorites/${productId}`, {
                    method: 'POST'
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    alert('Product added to favorites!');
                } else {
                    alert(data.error || 'Failed to add to favorites');
                }
            } catch (error) {
                console.error('Error adding to favorites:', error);
                alert('Failed to add to favorites');
            }
        }
    </script>
  </body>
</html>
